<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TextActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="25dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:text="你好，欢迎来到知乎日报！"
            android:textColor="#01DF01"
            android:textSize="20dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:hint="用户名"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/ic_password"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:hint="密码"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/ic_user"
            android:inputType="textPassword"
            />
        <CheckBox
            android:layout_width="125dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:text="同意用户协议"/>

        <Button
            android:id="@+id/TV_TextView"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#58D3F7"
            android:orientation="vertical"
            android:text="登录"
            android:textSize="20sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/TV_zuce"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:text="没有账号?立即注册"
            android:textSize="15dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/TV_tengxun"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="腾讯微博登录"
            android:textSize="20dp"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/IV_imagview1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/account_tencent"
           />
        <TextView
            android:id="@+id/TV_xinglang"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="新浪微博登录"
            android:gravity="center"
            android:textSize="20dp"/>
        <ImageView
            android:id="@+id/IV_imagview2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/account_sina"/>





    </LinearLayout>
</LinearLayout>